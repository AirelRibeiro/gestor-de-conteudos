    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "nyc": "^15.1.0",
    "pg": "^8.8.0",
    "sequelize": "^6.25.3",
    "ts-node": "10.7.0",
    "ts-node-dev": "^2.0.0",

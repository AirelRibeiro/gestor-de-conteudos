  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./build/index.js",
    "test": "mocha -r ts-node/register ./src/tests/integration/*$NAME*.test.ts -t 10000 --exit",
    "test:coverage": "nyc npm run test",
    "build": "npx tsc",
    "db:reset": "npx -y tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create",
    "db:migrate": "npx sequelize db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "prepare:db": "npm run db:reset && npm run db:migrate && npm run db:seed"
  },
